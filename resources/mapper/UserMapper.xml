<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qingtao.dao.UserMapper">
	<resultMap id="BaseResultMap" type="com.qingtao.pojo.User">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="username" property="username" jdbcType="VARCHAR" />
		<result column="password" property="password" jdbcType="VARCHAR" />
		<result column="studentid" property="studentid" jdbcType="BIGINT" />
		<result column="qq" property="qq" jdbcType="BIGINT" />
		<result column="phone" property="phone" jdbcType="BIGINT" />
		<result column="role" property="role" jdbcType="VARCHAR" />
		<result column="teacher" property="teacher" jdbcType="VARCHAR" />
		<result column="promiss" property="promiss" jdbcType="VARCHAR" />
		<result column="tname" property="tname" jdbcType="VARCHAR" />
		<result column="hasUp" property="hasUp" jdbcType="CHAR" />
	</resultMap>
	<sql id="Base_Column_List">
		id, username, password, studentid, qq, phone, role,
		teacher, promiss, tname, hasUp
	</sql>

	<!-- 取出用户(检测用户名,) -->
	<select id="selectOneUser" parameterType="com.qingtao.pojo.User"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from user
		<choose>
			<when test="username != null and studentid == null">
				where username = #{username,jdbcType=VARCHAR}
			</when>
			<when test="studentid != null and username == null">
				where studentid = #{studentid,jdbcType=BIGINT}
			</when>
			<otherwise>
				where username = #{username,jdbcType=VARCHAR}
				and
				studentid
				= #{studentid,jdbcType=BIGINT}
			</otherwise>
		</choose>
	</select>

	<!-- 更新信息 -->
	<update id="updateSelective" parameterType="com.qingtao.pojo.User">
		update user
		<set>
			<if test="password != null">
				password = #{password,jdbcType=VARCHAR},
			</if>
			<if test="qq != null">
				qq = #{qq,jdbcType=BIGINT},
			</if>
			<if test="phone != null">
				phone = #{phone,jdbcType=BIGINT},
			</if>
			<if test="teacher != null">
				teacher = #{teacher,jdbcType=VARCHAR},
			</if>
			<if test="promiss != null">
				promiss = #{promiss,jdbcType=VARCHAR},
			</if>
			<if test="tname != null">
				tname = #{tname,jdbcType=VARCHAR},
			</if>
			<if test="hasUp != null">
				hasUp = #{hasUp,jdbcType=VARCHAR},
			</if>
		</set>
		where studentid = #{studentid,jdbcType=BIGINT}
	</update>

	<!-- 注册 -->
	<insert id="insertSelective" parameterType="com.qingtao.pojo.User">
		insert into user
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="username != null">
				username,
			</if>
			<if test="password != null">
				password,
			</if>
			<if test="studentid != null">
				studentid,
			</if>
			<if test="qq != null">
				qq,
			</if>
			<if test="phone != null">
				phone,
			</if>
			<if test="role != null">
				role,
			</if>
			<if test="promiss != null">
				promiss,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="username != null">
				#{username,jdbcType=VARCHAR},
			</if>
			<if test="password != null">
				#{password,jdbcType=VARCHAR},
			</if>
			<if test="studentid != null">
				#{studentid,jdbcType=BIGINT},
			</if>
			<if test="qq != null">
				#{qq,jdbcType=BIGINT},
			</if>
			<if test="phone != null">
				#{phone,jdbcType=BIGINT},
			</if>
			<if test="role != null">
				#{role,jdbcType=VARCHAR},
			</if>
			<if test="promiss != null">
				#{promiss,jdbcType=VARCHAR},
			</if>
		</trim>
	</insert>

	<!-- 联动查询学生信息 -->
	<select id="selectByTitle" parameterType="java.lang.String"
		resultType="java.util.HashMap">
		SELECT promiss,u.studentid,qq,phone,s.agree,s.ctitle FROM user
		u,sdesign s
		WHERE u.studentid = s.studentid AND s.tname =
		#{tname.jdbcType=VARCHAR}
	</select>

	<!-- 管理员查询 -->
	<select id="selectAll" parameterType="java.util.Map" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from user 
		<if test="role != null">
			where role = '${role}'
		</if>
	</select>
	
	<delete id="delete">
		delete from user where studentid in
		<foreach collection="array" item="item" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
</mapper>